<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".WelcomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:text="@string/welcome_text" />

    <Button
        android:id="@+id/button_show_teachers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Посмотреть преподавателей" />

    <Button
        android:id="@+id/button_show_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Посмотреть группы" />

    <Button
        android:id="@+id/button_show_cabinets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Посмотреть кабинеты" />

    <Button
        android:id="@+id/button_show_disciplines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Посмотреть дисциплины" />
</LinearLayout>